<!DOCTYPE html>
<html lang="en" dir="ltr">

  <%-include('../partials/head.ejs')%>

  <body>

    <div class="container">

      <nav class="navbar">

        <%-include('../partials/nav.ejs')%>

      </nav>

      <form class="needs-validation newForm" action="/admins" method="POST" oninput='password2.setCustomValidity'(password2.value !== password.value ? "Passwords do not match." : "") />

        <fieldset>

          <legend>Welcome to the Team!</legend>

            <div class="row mt-4 mb-4">
              <label for="email">Email</label>
              <input class="col-6" type="email" name="email" required />

            </div>

            <div class="row mt-4 mb-4">
              <label for="username">Username</label>
              <input class="col-6" type="text" name="username" required />
            </div>

            <div class="row row mt-4 mb-4">
              <label for="password">Password</label>
              <input class="col-6" type="password" name="password" required />
            </div>

            <input class="btn btn-primary" type="submit" value="Register" />

        </fieldset>

      </form>

    </div>

  </body>
</html>
